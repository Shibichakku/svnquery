    	</Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" HorizontalContentAlignment="Right">
            <MenuItem Header="SvnFind" />
            <MenuItem Header="Options" />
            <MenuItem Header="Help" />
        </Menu>
        
    	<ListBox Grid.Row="2" Background="{x:Null}" Margin="0,8.02,0,0" />
